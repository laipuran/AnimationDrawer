<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Icons\Back.png" />
    <None Remove="Resources\Icons\Canvas.png" />
    <None Remove="Resources\Icons\icon.png" />
    <None Remove="Resources\Icons\Menu.png" />
    <None Remove="Resources\Icons\Output.png" />
    <None Remove="Resources\Icons\Preview.png" />
    <None Remove="Resources\Icons\Settings.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="SharpVectors.Wpf" Version="1.8.1" />
    <PackageReference Include="System.Drawing.Common" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\PuranLai\PuranLai.Algorithm\PuranLai.Algorithm.csproj" />
    <ProjectReference Include="..\..\PuranLai\PuranLai.Tools\PuranLai.Tools.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Icons\Back.png" />
    <Resource Include="Resources\Icons\Canvas.png" />
    <Resource Include="Resources\Icons\icon.png" />
    <Resource Include="Resources\Icons\Menu.png" />
    <Resource Include="Resources\Icons\Output.png" />
    <Resource Include="Resources\Icons\Preview.png" />
    <Resource Include="Resources\Icons\Settings.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Resource.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resource.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Resource.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resource.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Resources\Languages\en-us.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>

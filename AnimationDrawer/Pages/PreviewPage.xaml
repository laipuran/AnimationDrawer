<Page x:Class="AnimationDrawer.Pages.PreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimationDrawer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="PreviewPage">
    <StackPanel>
        <TextBlock x:Name="FpsTextBlock" Text="帧率：12" Style="{StaticResource ContentTextBlockStyle}"/>
        <Grid Margin="0,10,0,0" Background="{x:Static SystemParameters.WindowGlassBrush}">
            <InkCanvas x:Name="PreviewCanvas" IsEnabled="False" Height="720" Width="1080"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="PlayButton" Content="播放"
                    Width="100" Margin="20,0,0,0"
                    Style="{StaticResource ContentButtonStyle}"/>
        </StackPanel>
    </StackPanel>
</Page>
